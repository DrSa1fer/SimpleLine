{
  "metadata": [
    {
      "src": [
        {
          "src": "../SimpleLine/",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      { 
        "files": 
        [
          "articles/**/**/*.{md,yml}", 
          "api/**/**/*.{md,yml}"    ,
          "index.md",
          "toc.yml"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    
    "template": 
    [
      "default", "modern", "templates/material"
    ],

    "globalMetadata": {
      "_appName": "SimpleLine",
      "_appTitle": "SimpleLine",
      "_enableSearch": true,
      "pdf": true
    }
  }
}